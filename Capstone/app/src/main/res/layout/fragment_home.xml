<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.capstone.viewmodel.MovieViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_movie"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_movie">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search movies"
                android:padding="12dp"
                android:minHeight="46dp"
                android:background="@drawable/search_background"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/movie_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Your Movie"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/searchBar"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp" />

            <FrameLayout
                android:id="@+id/movieFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_movie"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMovie"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_movie"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_movie"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <RelativeLayout
                    android:id="@+id/errorLayoutMovie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">

                        <ProgressBar
                            android:id="@+id/progressBarMovie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/errorMsgMovie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error loading movies"
                            android:textColor="@color/pink"
                            android:gravity="center_horizontal" />

                        <Button
                            android:id="@+id/retryButtonMovie"
                            style="@style/Widget.MaterialComponents.Button"
                            android:backgroundTint="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/movieFrameLayout"
                android:layout_marginTop="25dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/movie_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended for you"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@id/divider"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp" />

            <FrameLayout
                android:id="@+id/recommendationFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_recommendation"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_recommendation"
                    android:scrollbarTrackVertical="@drawable/scrollbar_track_recommendation"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <RelativeLayout
                    android:id="@+id/errorLayoutRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerInParent="true">

                        <ProgressBar
                            android:id="@+id/progressBarRecommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/errorMsgRecommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Error loading recommendations"
                            android:textColor="@color/pink"
                            android:gravity="center_horizontal" />

                        <Button
                            android:id="@+id/retryButtonRecommendation"
                            style="@style/Widget.MaterialComponents.Button"
                            android:backgroundTint="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retry" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
